<html>
<head>
    <title>Main Menu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="design.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css" integrity="sha256-ogmFxjqiTMnZhxCqVmcqTvjfe1Y/ec4WaRj/aQPvn+I=" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/dedfb313b8.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/js/foundation.min.js" integrity="sha256-pRF3zifJRA9jXGv++b06qwtSqX1byFQOLjqa2PTEb2o=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/motion-ui@1.2.3/dist/motion-ui.min.css" />

</head>
<body onload="$(document).foundation()">
    <div class="off-canvas-wrapper">
        <div class="off-canvas position-left skyline" id="offCanvas" data-off-canvas data-tranisition="overlap">
            <ul class="vertical menu">
                <li class="menu-text"><i class="fas fa-user"></i> <%=fullname%></li>
                <li class="menu-text"><%=acc_type%></li>
                <li class="is-active"><a href="#"><i class="fas fa-home"></i> Home</a></li>
            </ul>
            <% if (acc_type==0){ %>
            <ul class="vertical menu">
                <li><a href="#"><i class="fas fa-users"></i> View Users</a></li>
                <li><a href="#"><i class="fas fa-user-plus"></i> Add User</a></li>
            </ul>
            <% } %>
            <ul class="vertical menu">
                <li><a href="/items"> <i class="fas fa-car-side"></i> View Items</a></li>
                <li><a href="/items/additem">Add Item</a></li>
            </ul>
            <ul class="vertical menu">
                <li><a href="/login"><i class="fas fa-sign-out-alt"></i> Sign Out</a></li>
            </ul>
        </div>
        <div class="off-canvas-content title-bar" data-off-canvas-content>
            <div class="title-bar-left icons">
                <button type="button" data-toggle="offCanvas"><i class="fas fa-bars white-text"></i></button>
                <span class="title-bar-title"> Die-Cast Inventory System</span>
            </div>
        </div>
    </div>
    <div class="callout success small" data-closable="slide-out-right">
        <button class="close-button" aria-label="Close alert" type="button" data-close>
          <span aria-hidden="true">&times;</span>
        </button>
        <p>Hello <%=fullname%>! </p>
        <p>Date Logged In: <%= dl %></p>
        <p>Time Logged In: <%= tl %></p>
      </div>
</body>
</html>